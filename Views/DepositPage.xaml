<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CryptoApp.Views.DepositPage"
             Title="Deposit">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Deposit Funds" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>
        
        <Entry Placeholder="Enter Amount"
               Keyboard="Numeric"
               Text="{Binding DepositAmount, Mode=TwoWay}"/>
        
        <Button Text="Deposit"
                Command="{Binding DepositCommand}"
                BackgroundColor="Blue"
                TextColor="White"/>

        <Label Text="Deposit History" FontSize="18" FontAttributes="Bold"/>

        <CollectionView ItemsSource="{Binding UserDeposits}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BorderColor="Gray">
                        <VerticalStackLayout>
                            <Label Text="{Binding Amount}" FontSize="18" FontAttributes="Bold"/>
                            <Label Text="{Binding DepositDate, StringFormat='{0:yyyy-MM-dd HH:mm}'}" 
                                   FontSize="14" TextColor="Gray"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>