<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CryptoApp.Views.DepositPage"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#121212}"
             Title="Deposit">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Deposit Funds" 
               FontSize="24" 
               FontAttributes="Bold" 
               HorizontalOptions="Center"
               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
        
        <Frame Padding="16" 
               CornerRadius="10" 
               HasShadow="True"
               BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D2D}"
               BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#3D3D3D}">
            <VerticalStackLayout Spacing="15">
                <Label Text="Enter Amount to Deposit"
                       FontSize="16"
                       TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                       
                <Entry Placeholder="Enter Amount"
                       Keyboard="Numeric"
                       Text="{Binding DepositAmount, Mode=TwoWay}"
                       TextColor="{AppThemeBinding Light=Black, Dark=White}"
                       BackgroundColor="{AppThemeBinding Light=White, Dark=#404040}"/>
                
                <Button Text="Deposit"
                        Command="{Binding DepositCommand}"
                        BackgroundColor="{AppThemeBinding Light=#512BD4, Dark=#9880e5}"
                        TextColor="White"/>
            </VerticalStackLayout>
        </Frame>

        <Label Text="Deposit History" 
               FontSize="18" 
               FontAttributes="Bold"
               TextColor="{AppThemeBinding Light=Black, Dark=White}"
               Margin="0,10,0,5"/>

        <CollectionView ItemsSource="{Binding UserDeposits}"
                        BackgroundColor="Transparent">
            <CollectionView.EmptyView>
                <Label Text="No deposit history found"
                       TextColor="{AppThemeBinding Light=Black, Dark=White}"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" 
                           Margin="5" 
                           CornerRadius="10"
                           BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#3D3D3D}"
                           BackgroundColor="{AppThemeBinding Light=White, Dark=#2D2D2D}">
                        <VerticalStackLayout>
                            <Label Text="{Binding Amount, StringFormat='${0:N2}'}" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                            <Label Text="{Binding DepositDate, StringFormat='{0:yyyy-MM-dd HH:mm}'}" 
                                   FontSize="14" 
                                   TextColor="{AppThemeBinding Light=#6E6E6E, Dark=#ACACAC}"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>