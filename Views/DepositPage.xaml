<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CryptoApp.Views.DepositPage"
             Title="Deposit">
    <VerticalStackLayout Padding="20">
        <Label Text="Available Balance" FontSize="18"/>
        <Label Text="{Binding UserBalance, StringFormat='${0:N2}'}" FontSize="22" FontAttributes="Bold"/>

        <Entry Placeholder="Enter deposit amount" Keyboard="Numeric" Text="{Binding DepositAmount}" />
        <Button Text="Deposit" Command="{Binding DepositCommand}" BackgroundColor="Green" TextColor="White"/>

        <ListView ItemsSource="{Binding UserDeposits}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Amount, StringFormat='Deposited: ${0:N2}'}"
                              Detail="{Binding Date, StringFormat='Date: {0:MM/dd/yyyy HH:mm}'}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>