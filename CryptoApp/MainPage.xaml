<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CryptoApp.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- Total Portfolio Value -->
            <Border BackgroundColor="LightGray" Padding="15" StrokeThickness="1">
                <VerticalStackLayout>
                    <Label Text="Total Portfolio Value" FontSize="18" FontAttributes="Bold"/>
                    <Label x:Name="TotalValueLabel" Text="$0.00" FontSize="24" TextColor="Green" FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Border>

            <!-- Portfolio Performance -->
            <Border BackgroundColor="LightGray" Padding="15" StrokeThickness="1">
                <VerticalStackLayout>
                    <Label Text="Portfolio Performance" FontSize="18" FontAttributes="Bold"/>
                    <Label x:Name="PerformanceLabel" Text="+0.00%" FontSize="24" TextColor="Green" FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Border>

            <!-- Top Coins Section -->
            <Label Text="Top Coins" FontSize="20" FontAttributes="Bold"/>
            <CollectionView x:Name="TopCoinsList" HeightRequest="200">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border BackgroundColor="White" Padding="10" StrokeThickness="1" Margin="5">
                            <HorizontalStackLayout>
                                <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold"/>
                                <Label Text="{Binding Price}" FontSize="18" TextColor="DarkGray" Margin="10,0,0,0"/>
                                <Label Text="{Binding Change}" FontSize="18" Margin="10,0,0,0" 
                                       TextColor="{Binding ChangeColor}"/>
                            </HorizontalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Refresh Button -->
            <Button Text="Refresh Prices" BackgroundColor="Blue" TextColor="White"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
