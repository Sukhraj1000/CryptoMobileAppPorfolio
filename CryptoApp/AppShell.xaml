<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:CryptoApp.Views"
       x:Class="CryptoApp.AppShell">
       
    <TabBar>
        <ShellContent Title="Home" ContentTemplate="{DataTemplate views:HomePage}" Route="HomePage"/>
        <ShellContent Title="Portfolio" ContentTemplate="{DataTemplate views:PortfolioPage}" Route="PortfolioPage"/>
        <ShellContent Title="Deposit" ContentTemplate="{DataTemplate views:DepositPage}" Route="DepositPage"/>
        <ShellContent Title="Settings" ContentTemplate="{DataTemplate views:SettingsPage}" Route="SettingsPage"/>
    </TabBar>
</Shell>