<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CryptoApp.Views.DepositPage"
             Title="Deposit">
    
    <VerticalStackLayout Padding="20">
        <Label Text="Add a Crypto Purchase" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>

        <Entry Placeholder="Crypto Name" Text="{Binding NewTransaction.CryptoName}"/>
        <Entry Placeholder="Amount" Keyboard="Numeric" Text="{Binding NewTransaction.Amount}"/>
        <Entry Placeholder="Buy Price" Keyboard="Numeric" Text="{Binding NewTransaction.BuyPrice}"/>
        <Entry Placeholder="Currency" Text="{Binding NewTransaction.Currency}"/>

        <Button Text="Add Transaction" Command="{Binding AddTransactionCommand}" BackgroundColor="Green" TextColor="White"/>
    </VerticalStackLayout>

</ContentPage>