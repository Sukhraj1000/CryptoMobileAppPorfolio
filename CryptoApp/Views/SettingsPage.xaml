<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:CryptoApp.ViewModels"
             x:Class="CryptoApp.Views.SettingsPage"
             x:DataType="viewModels:SettingsViewModel"
             Title="Settings">

    <VerticalStackLayout Padding="20">
        <Label Text="Settings" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>
        <Switch IsToggled="{Binding EnableNotifications}"/>
        <Label Text="Enable Notifications" FontSize="18"/>
        <Button Text="Sign Out" Command="{Binding SignOutCommand}" BackgroundColor="Red" TextColor="White"/>
    </VerticalStackLayout>

</ContentPage>