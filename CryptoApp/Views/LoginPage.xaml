<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CryptoApp.Views.LoginPage"
             Title="Login">
    
    <VerticalStackLayout Padding="20">
        <Label Text="Login" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>

        <Entry Placeholder="Email" Text="{Binding Email}"/>
        <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True"/>

        <Button Text="Sign In" Command="{Binding LoginCommand}" BackgroundColor="Blue" TextColor="White"/>
        <Button Text="Register" Command="{Binding RegisterCommand}" BackgroundColor="Gray" TextColor="White"/>
    </VerticalStackLayout>

</ContentPage>